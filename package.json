{
  "private": true,
  "name": "lucca-chuppi",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\" \"npm run dev:server:run\"",
    "dev:client": "cd src/client && vite",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "dev:server:run": "nodemon dist/server/index.cjs",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login --copy-paste",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "test": "npx playwright test $@",
    "test:e2e": "concurrently -k -s first \"npm run dev:client\" \"npm run test:server\"",
    "test:server": "NODE_ENV=test node dist/server/index.cjs",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/web": "0.12.1",
    "devvit": "0.12.1",
    "express": "5.1.0",
    "phaser": "3.88.2"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@playwright/test": "^1.56.1",
    "@types/express": "5.0.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "globals": "15.15.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "terser": "5.39.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "uuid": "^13.0.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
